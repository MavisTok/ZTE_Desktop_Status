<Window x:Class="ZTE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZTE"
        mc:Ignorable="d"
        Title="ZTE Router Dashboard" Height="750" Width="1200"
        MinWidth="900" MinHeight="600"
        Background="#F5F5F5">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15" CornerRadius="5" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0"
                          Text="ZTE Router Dashboard"
                          FontSize="24" FontWeight="Bold"
                          Foreground="White"
                          VerticalAlignment="Center"
                          Margin="0,0,20,0" />

                <StackPanel Grid.Row="0" Grid.Column="2"
                           Orientation="Horizontal"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center">
                    <Button Content="📊 扩展信息"
                            Padding="10,5"
                            Margin="0,0,15,0"
                            Click="OnExtendedInfoClick"
                            Background="#1976D2"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                   CornerRadius="3"
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1565C0" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <TextBlock Text="Last Update: " Foreground="White" VerticalAlignment="Center" />
                    <TextBlock Text="{Binding LastUpdate}" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="登录模式:" Foreground="White" VerticalAlignment="Center" />
                    <ComboBox Width="130" Margin="8,0,15,0" SelectedIndex="{Binding LoginModeIndex}">
                        <ComboBoxItem Content="免登录模式" />
                        <ComboBoxItem Content="登录模式" />
                    </ComboBox>

                    <TextBlock Text="密码:" Foreground="White" VerticalAlignment="Center"
                               Visibility="{Binding IsLoginMode, Converter={StaticResource BoolToVisibility}}" />
                    <PasswordBox Width="180" Margin="8,0,15,0"
                                 PasswordChanged="OnLoginPasswordChanged"
                                 Visibility="{Binding IsLoginMode, Converter={StaticResource BoolToVisibility}}" />

                    <Button Content="登录"
                            Padding="12,4"
                            Command="{Binding LoginCommand}"
                            Visibility="{Binding IsLoginMode, Converter={StaticResource BoolToVisibility}}" />

                    <TextBlock Text="{Binding LoginStatus}" Foreground="White" VerticalAlignment="Center" Margin="15,0,0,0" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Dashboard Cards -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- First Row: Network, Speed, Traffic -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Card 1: Network Status -->
                    <Border Grid.Column="0" Background="White" CornerRadius="5"
                           Padding="20" Margin="0,0,10,0" BorderBrush="#E0E0E0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Network Status" FontSize="18" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,15" />

                            <!-- Status -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Status:" Foreground="#666" VerticalAlignment="Top" />
                                <TextBlock Grid.Column="1" Text="{Binding ConnectStatus}" FontWeight="Bold" Foreground="#4CAF50" TextWrapping="Wrap" />
                            </Grid>

                            <!-- IPv4 -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="IPv4:" Foreground="#666" VerticalAlignment="Top" />
                                <TextBlock Grid.Column="1" Text="{Binding Ipv4Address}" FontWeight="SemiBold" TextWrapping="Wrap" />
                            </Grid>

                            <!-- IPv6 -->
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="IPv6:" Foreground="#666" VerticalAlignment="Top" />
                                <TextBlock Grid.Column="1" Text="{Binding Ipv6Address}" FontWeight="SemiBold" TextWrapping="Wrap" FontSize="11" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Card 2: Real-time Speed -->
                    <Border Grid.Column="1" Background="White" CornerRadius="5"
                           Padding="20" Margin="5,0" BorderBrush="#E0E0E0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Real-time Speed" FontSize="18" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,15" />

                            <StackPanel Margin="0,10">
                                <TextBlock Text="Upload" Foreground="#666" FontSize="12" Margin="0,0,0,5" />
                                <TextBlock Text="{Binding UploadSpeed}" FontSize="28" FontWeight="Bold" Foreground="#FF9800" />
                            </StackPanel>

                            <StackPanel Margin="0,10">
                                <TextBlock Text="Download" Foreground="#666" FontSize="12" Margin="0,0,0,5" />
                                <TextBlock Text="{Binding DownloadSpeed}" FontSize="28" FontWeight="Bold" Foreground="#4CAF50" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Card 3: Traffic Statistics -->
                    <Border Grid.Column="2" Background="White" CornerRadius="5"
                           Padding="20" Margin="10,0,0,0" BorderBrush="#E0E0E0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Traffic Statistics" FontSize="18" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,15" />

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Today:" Width="80" Foreground="#666" />
                                <TextBlock Text="{Binding DayTraffic}" FontWeight="Bold" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="This Month:" Width="80" Foreground="#666" />
                                <TextBlock Text="{Binding MonthTraffic}" FontWeight="Bold" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Total:" Width="80" Foreground="#666" />
                                <TextBlock Text="{Binding TotalTraffic}" FontWeight="Bold" Foreground="#2196F3" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Second Row: SIM, Signal, Devices -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Card 4: SIM Information -->
                    <Border Grid.Column="0" Background="White" CornerRadius="5"
                           Padding="20" Margin="0,0,10,0" BorderBrush="#E0E0E0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="SIM Information" FontSize="18" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,15" />

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Operator:" Width="80" Foreground="#666" />
                                <TextBlock Text="{Binding Operator}" FontWeight="Bold" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Status:" Width="80" Foreground="#666" />
                                <TextBlock Text="{Binding SimStatus}" FontWeight="SemiBold" Foreground="#4CAF50" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="ICCID:" Width="80" Foreground="#666" />
                                <TextBlock Text="{Binding Iccid}" FontWeight="SemiBold" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="MAC:" Width="80" Foreground="#666" />
                                <TextBlock Text="{Binding MacAddress}" FontWeight="SemiBold" FontSize="11" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Card 5: Signal Strength -->
                    <Border Grid.Column="1" Background="White" CornerRadius="5"
                           Padding="20" Margin="5,0" BorderBrush="#E0E0E0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Signal Strength" FontSize="18" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,15" />

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Type:" Width="80" Foreground="#666" />
                                <TextBlock Text="{Binding NetworkType}" FontWeight="Bold" Foreground="#9C27B0" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Band:" Width="80" Foreground="#666" />
                                <TextBlock Text="{Binding ActiveBand}" FontWeight="SemiBold" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Signal:" Width="80" Foreground="#666" />
                                <TextBlock Text="{Binding SignalBar}" FontWeight="Bold" Foreground="#4CAF50" />
                                <TextBlock Text=" / 5" FontWeight="Bold" Foreground="#666" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="RSRP:" Width="80" Foreground="#666" />
                                <TextBlock Text="{Binding Rsrp}" FontWeight="SemiBold" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Card 6: Device Count -->
                    <Border Grid.Column="2" Background="White" CornerRadius="5"
                           Padding="20" Margin="10,0,0,0" BorderBrush="#E0E0E0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Connected Devices" FontSize="18" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,15" />

                            <StackPanel Margin="0,10">
                                <TextBlock Text="Total Devices" Foreground="#666" FontSize="12" Margin="0,0,0,5" />
                                <TextBlock Text="{Binding TotalDevices}" FontSize="36" FontWeight="Bold" Foreground="#2196F3" />
                            </StackPanel>

                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Wireless" Foreground="#666" FontSize="11" />
                                    <TextBlock Text="{Binding WirelessDevices}" FontSize="20" FontWeight="Bold" />
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Wired" Foreground="#666" FontSize="11" />
                                    <TextBlock Text="{Binding WiredDevices}" FontSize="20" FontWeight="Bold" />
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>

        <!-- Footer / Status Bar -->
        <Border Grid.Row="2" Background="White" Padding="12" CornerRadius="5" Margin="0,15,0,0" BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Status Indicator -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="10" Height="10" Fill="LightGreen" VerticalAlignment="Center" Margin="0,0,8,0" />
                    <TextBlock Text="Status:" FontSize="12" Foreground="#666" VerticalAlignment="Center" Margin="0,0,5,0" />
                    <TextBlock Text="{Binding StatusMessage}" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center" />
                </StackPanel>

                <!-- Copyright -->
                <TextBlock Grid.Column="1"
                          Text="ZTE Router Monitor - Real-time Dashboard"
                          FontSize="11" Foreground="#999"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center" />
            </Grid>
        </Border>
    </Grid>
</Window>