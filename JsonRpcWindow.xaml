<Window x:Class="ZTE.JsonRpcWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="JSON-RPC Data Viewer" Height="800" Width="1400"
        MinWidth="1000" MinHeight="600"
        Background="#F5F5F5">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15" CornerRadius="5" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="JSON-RPC Data Viewer"
                          FontSize="24" FontWeight="Bold"
                          Foreground="White"
                          Margin="0,0,0,5"/>
                <TextBlock Text="ä»Ž 192.168.0.1.har æ–‡ä»¶ä¸­æå–çš„ JSON-RPC è¯·æ±‚å’Œå“åº”æ•°æ®"
                          FontSize="12"
                          Foreground="#E3F2FD"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: List of JSON-RPC calls -->
            <Border Grid.Column="0" Background="White" CornerRadius="5"
                   Padding="15" Margin="0,0,10,0" BorderBrush="#E0E0E0" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                              Text="JSON-RPC è°ƒç”¨åˆ—è¡¨"
                              FontSize="16" FontWeight="Bold"
                              Foreground="#2196F3"
                              Margin="0,0,0,15"/>

                    <ListBox Grid.Row="1"
                            ItemsSource="{Binding JsonRpcDataList}"
                            SelectedItem="{Binding SelectedJsonRpcData}"
                            BorderThickness="0"
                            ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1"
                                       Padding="8" Margin="0,2">
                                    <StackPanel>
                                        <TextBlock Text="{Binding DisplaySummary}"
                                                  FontWeight="SemiBold"
                                                  FontSize="13"
                                                  Foreground="#1976D2"
                                                  TextWrapping="Wrap"
                                                  Margin="0,0,0,5"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Method: "
                                                      FontSize="11"
                                                      Foreground="#666"/>
                                            <TextBlock Text="{Binding Method}"
                                                      FontSize="11"
                                                      Foreground="#333"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Timestamp, StringFormat='yyyy-MM-dd HH:mm:ss'}"
                                                  FontSize="10"
                                                  Foreground="#999"
                                                  Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Right Panel: Details of selected JSON-RPC call -->
            <Border Grid.Column="1" Background="White" CornerRadius="5"
                   Padding="15" Margin="10,0,0,0" BorderBrush="#E0E0E0" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Details Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="è¯¦ç»†ä¿¡æ¯"
                                  FontSize="16" FontWeight="Bold"
                                  Foreground="#2196F3"
                                  Margin="0,0,0,10"/>

                        <!-- Show selected item info -->
                        <StackPanel Visibility="{Binding IsJsonRpcSelected, Converter={StaticResource BoolToVisibility}}">
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Request ID:" Foreground="#666"/>
                                <TextBlock Grid.Column="1" Text="{Binding SelectedJsonRpcData.Id}" FontWeight="Bold"/>
                            </Grid>

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="API:" Foreground="#666"/>
                                <TextBlock Grid.Column="1" Text="{Binding SelectedJsonRpcData.ApiNamespace}" FontWeight="SemiBold"/>
                            </Grid>

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Function:" Foreground="#666"/>
                                <TextBlock Grid.Column="1" Text="{Binding SelectedJsonRpcData.ApiFunction}" FontWeight="SemiBold"/>
                            </Grid>

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="URL:" Foreground="#666"/>
                                <TextBlock Grid.Column="1" Text="{Binding SelectedJsonRpcData.Url}"
                                          FontFamily="Consolas" FontSize="11" TextWrapping="Wrap"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>

                    <!-- Request and Response Display -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Visibility="{Binding IsJsonRpcSelected, Converter={StaticResource BoolToVisibility}}">
                            <!-- Request Section -->
                            <Border Background="#FFF3E0" BorderBrush="#FFB74D" BorderThickness="1"
                                   CornerRadius="3" Padding="12" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="ðŸ“¤ Request"
                                              FontSize="14" FontWeight="Bold"
                                              Foreground="#F57C00"
                                              Margin="0,0,0,10"/>
                                    <TextBox Text="{Binding FormattedRequest, Mode=OneWay}"
                                            IsReadOnly="True"
                                            TextWrapping="Wrap"
                                            BorderThickness="0"
                                            Background="Transparent"
                                            FontFamily="Consolas"
                                            FontSize="11"
                                            VerticalScrollBarVisibility="Disabled"/>
                                </StackPanel>
                            </Border>

                            <!-- Response Section -->
                            <Border Background="#E8F5E9" BorderBrush="#66BB6A" BorderThickness="1"
                                   CornerRadius="3" Padding="12">
                                <StackPanel>
                                    <TextBlock Text="ðŸ“¥ Response"
                                              FontSize="14" FontWeight="Bold"
                                              Foreground="#388E3C"
                                              Margin="0,0,0,10"/>
                                    <TextBox Text="{Binding FormattedResponse, Mode=OneWay}"
                                            IsReadOnly="True"
                                            TextWrapping="Wrap"
                                            BorderThickness="0"
                                            Background="Transparent"
                                            FontFamily="Consolas"
                                            FontSize="11"
                                            VerticalScrollBarVisibility="Disabled"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Empty state message -->
                    <StackPanel Grid.Row="1"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Visibility="{Binding IsJsonRpcNotSelected, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="è¯·ä»Žå·¦ä¾§åˆ—è¡¨é€‰æ‹©ä¸€ä¸ª JSON-RPC è°ƒç”¨"
                                  FontSize="14"
                                  Foreground="#999"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
